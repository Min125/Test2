<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailNewsActivity2">

    <TextView
        android:id="@+id/txtTitle_DetailPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="An Engineer Gets 9 Years for Stealing $10M From Microsoft "
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:paddingRight="20dp"
        android:textStyle="bold"
        android:textColor="#A80808"
        android:layout_marginTop="15dp"
        android:lineHeight="28dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitle_DetailPage"
        android:layout_marginTop="15dp"
        android:id="@+id/img_DetailPage"/>

    <TextView
        android:id="@+id/txtDateLabel_DetailPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datetime:"
        app:layout_constraintTop_toBottomOf="@id/img_DetailPage"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtDate_DetailPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/txtDateLabel_DetailPage"
        app:layout_constraintTop_toBottomOf="@id/img_DetailPage"
        app:layout_constraintBaseline_toBaselineOf="@id/txtDateLabel_DetailPage"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/txtContentLabel_DetailPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Content:"
        app:layout_constraintTop_toBottomOf="@id/txtDateLabel_DetailPage"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtContent_DetailPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtContentLabel_DetailPage"
        android:layout_marginTop="5dp"
        android:maxLength="10000"
        android:layout_marginLeft="10dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>